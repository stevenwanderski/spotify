<h1><%= @album.name %></h1>
<div class="flex">
  <div class="album__column">
    <div data-uri="<%= @album.uri %>" class="album-image" style="background-image: url('<%= @album.image_medium_url %>');"></div>
  </div>

  <%= form_for(@album) do |f| %>
    <div class="field">
      <%= f.label :tag_ids, 'Folders', class: 'label' %>
      <%= f.collection_check_boxes :tag_ids, @tags, :id, :name do |b| %>
        <div class="checkbox">
          <%= b.label { b.check_box + b.text } %>
        </div>
      <% end %>
    </div>

    <%= f.submit 'Save', class: 'button' %>
  <% end %>
</div>

<%= javascript_tag do %>
  Albums.init({ accessToken: '<%= @access_token %>'});
<% end %>
